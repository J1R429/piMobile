<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Gerenciar Usuários</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/admin-usuarios.css">
    <link rel="stylesheet" href="/css/responsivo.css">
</head>
<body>
    <div class="container">
        <header>
            <img src="/images/logo3-mini.png" alt="Logo" class="logo">
        </header>
        <h1>Gerenciar Usuários</h1>

        <!-- Formulário para criar um novo usuário -->
        <h2>Cadastrar Novo Usuário</h2>
        <form action="/admin/criar-usuario" method="POST">
            <div class="form-group">
                <label for="nome_completo">Nome Completo:</label>
                <input type="text" id="nome_completo" name="nome_completo" required>
            </div>
            <div class="form-group">
                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" required>
            </div>
            <div class="form-group">
                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="telefone">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email">
            </div>
            <div class="form-group">
                <label for="cartao_sus">Cartão SUS:</label>
                <input type="text" id="cartao_sus" name="cartao_sus">
            </div>
            <div class="form-group">
                <label for="data_nascimento">Data de Nascimento:</label>
                <input type="date" id="data_nascimento" name="data_nascimento" required>
            </div>
            <div class="form-group">
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" required>
            </div>
            <button type="submit">Criar Usuário</button>
        </form>

        <!-- Formulário de pesquisa -->
        <h2>Pesquisar Usuário</h2>
        <form action="/admin/pesquisar-usuario" method="POST">
            <div class="form-group">
                <label for="cpf">Pesquisar por CPF:</label>
                <input type="text" id="cpf" name="cpf" placeholder="Digite o CPF" required>
            </div>
            <button type="submit">Pesquisar</button>
        </form>

        <!-- Lista de usuários com opção de editar e deletar -->
        <h2>Usuários Existentes</h2>
        <ul>
            <% usuarios.forEach(usuario => { %>
                <li>
                    <form action="/admin/editar-usuario/<%= usuario.id %>" method="POST">
                        <div class="form-group">
                            <label for="nome_completo_<%= usuario.id %>">Nome Completo:</label>
                            <input type="text" id="nome_completo_<%= usuario.id %>" name="nome_completo" value="<%= usuario.nome_completo %>">
                        </div>
                        <div class="form-group">
                            <label for="cpf_<%= usuario.id %>">CPF:</label>
                            <input type="text" id="cpf_<%= usuario.id %>" name="cpf" value="<%= usuario.cpf %>" readonly>
                        </div>
                        <div class="form-group">
                            <label for="telefone_<%= usuario.id %>">Telefone:</label>
                            <input type="text" id="telefone_<%= usuario.id %>" name="telefone" value="<%= usuario.telefone %>">
                        </div>
                        <div class="form-group">
                            <label for="email_<%= usuario.id %>">Email:</label>
                            <input type="email" id="email_<%= usuario.id %>" name="email" value="<%= usuario.email %>">
                        </div>
                        <div class="form-group">
                            <label for="cartao_sus_<%= usuario.id %>">Cartão SUS:</label>
                            <input type="text" id="cartao_sus_<%= usuario.id %>" name="cartao_sus" value="<%= usuario.cartao_sus %>">
                        </div>
                        <div class="form-group">
                            <label for="data_nascimento_<%= usuario.id %>">Data de Nascimento:</label>
                            <input type="date" id="data_nascimento_<%= usuario.id %>" name="data_nascimento" value="<%= usuario.data_nascimento %>">
                        </div>
                        <button type="submit">Salvar Alterações</button>
                        <button formaction="/admin/deletar-usuario/<%= usuario.id %>" formmethod="POST">Deletar</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
