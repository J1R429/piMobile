<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Gerenciar Dependentes</title>
</head>
<body>
    <h1>Gerenciar Dependentes - <%= usuario.nome_completo %></h1>
    <ul>
        <% dependentes.forEach(function(dependente) { %>
            <li>
                Nome: <%= dependente.nome_completo %> (CPF: <%= dependente.cpf %>)
                <form action="/login-como-dependente" method="POST" style="display:inline;">
                    <input type="hidden" name="cpf" value="<%= dependente.cpf %>">
                    <button type="submit">Login como dependente</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <!-- BotÃ£o para voltar ao perfil do gestor -->
    <form action="/voltar-ao-gestor" method="POST">
        <button type="submit">Voltar ao perfil do gestor</button>
    </form>
</body>
</html>


